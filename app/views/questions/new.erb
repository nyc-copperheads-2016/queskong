<form action="/surveys/<%= survey.id %>/questions" method="POST" >
  <div class="question-maker">
    <input type= "text" name="content" placeholder="Your Question Here" />
    <textarea name="possibilities" rows="5" cols="50" placeholder="Your multiple choices here separated by a comma. Ex: Blue, Green, Red"></textarea>
    <input type="submit" name="done?" value="Make next question"/>
    <input type="submit" name="done?" value="Done. Finish my survey">
  </div>
</form>
