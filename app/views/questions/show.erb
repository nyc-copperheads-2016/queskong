<h3><%= current_question.content %></h3>
<form action="/taken_surveys/<%= current_taken_survey.id %>/answers" method="post">
  <% current_question.possibilities.each do |possibility| %>
    <input type="radio" name="possibility_id" value="<%= possibility.id %>"><%= possibility.choice %>
  <% end %>
  <input type="hidden" name="question_id" value="<%= current_question.id %>">
  <input type="submit" value="submit" >
</form>
