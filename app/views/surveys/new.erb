<h3>Survey-Create Wizard</h3>
<form method="post" action="/surveys">
  <div class="title">
    <input type="text" name="title" placeholder="Your Title Goes Here">
    <textarea name="description" placeholder="Describe the purpose of your survey."></textarea>
  </div>
  <input type="submit" value="Make my Survey Title!"/>
</form>
<% if defined?(errors) %>
<ul>
  <% errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>
