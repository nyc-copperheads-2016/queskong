<!-- login page -->
<h2>Log in!</h2>
<form method='post' action='/sessions'>
  <input type='text' name='username' placeholder='Username' />
  <input type='password' name='password' placeholder='Password' />
  <input type='submit' value='Log in' />
</form>
<div class="login_error">
  <% if defined?(error)%>
    <%= error %>
  <% end %>
</div>
